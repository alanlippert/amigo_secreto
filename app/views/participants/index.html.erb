<h1>Lista de Participantes</h1>

<% @participants.each do |participant| %>
  <p><%= participant.name %> - <%= participant.email %> <%= link_to 'Editar', edit_participant_path(participant) %> | <%= link_to 'Excluir', participant, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>

<% end %>

<p><%= link_to 'Adicionar Participante', new_participant_path %></p>
